<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Dailymotion" />

    <style name="Dailymotion.TextView" />

    <style name="Dailymotion.TextView.Title" parent="Dailymotion.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dailymotion.AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextAppearance">@style/Dailymotion.AppTabTextAppearance</item>
        <item name="tabSelectedTextAppearance">@style/Dailymotion.AppTabSelectedTextAppearance</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingBottom">10dp</item>
    </style>

    <!-- for text -->
    <style name="Dailymotion.AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/trolley_grey</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Dailymotion.AppTabSelectedTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Dailymotion.ControlsButton">

    </style>

    <style name="Dailymotion.ControlsButton.ImageView" parent="Dailymotion.ControlsButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Dailymotion.ControlsButton.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SampleCastTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="castMiniControllerStyle">@style/CustomCastMiniController</item>
        <item name="castExpandedControllerStyle">@style/CustomCastExpandedController</item>
        <item name="castExpandedControllerToolbarStyle">
            @style/ThemeOverlay.AppCompat.Dark.ActionBar
        </item>
    </style>

    <style name="CustomCastMiniController" parent="CastMiniController">
        <item name="castShowImageThumbnail">true</item>
        <item name="castTitleTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="castSubtitleTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="CustomCastExpandedController" parent="CastExpandedController">
        <item name="castControlButtons">
            @array/cast_expanded_controller_control_buttons
        </item>
    </style>
</resources>